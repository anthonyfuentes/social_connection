
<%= render partial: 'users/shared/cover' %>

<section class="row">
  <div class="col-sm-12">
    <div class="panel panel-default">

      <div class="panel-heading">
        <h2>About</h2>
      </div>

      <div class="panel-body">
        <div class="col-sm-4 col-sm-offset-1 col-xs-8 col-xs-offset-2">
          <h3 class="underscore inline">Places</h3>
          <%= render 'places' %>
          <h3 class="underscore inline">Contact Information</h3>
          <%= render 'contact_information' %>
        </div>

        <div class="col-sm-5 col-sm-offset-1 col-xs-8 col-xs-offset-2">
          <h3 class="underscore inline">About Me</h3>
          <p><%= @profile.about_me %></p>
        </div>
      </div>

    </div>
  </div>
</section>

