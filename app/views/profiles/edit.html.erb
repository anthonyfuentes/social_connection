
<%= render partial: 'users/shared/cover' %>

<section class="row">
  <div class="panel panel-default">

    <div class="panel-heading">
      <h2>Edit Profile</h2>
    </div>

    <div class="panel-body">
      <%= form_for [@profile.user, @profile] do |f| %>

        <div class="col-sm-4 col-sm-offset-1 col-xs-8 col-xs-offset-2">
          <h3 class="underscore inline">Places</h3>
          <%= render 'places_form', f: f %>
          <h3 class="underscore inline">Contact Information</h3>
          <%= render 'contact_information' %>
        </div>

        <div class="col-sm-5 col-sm-offset-1 col-xs-8 col-xs-offset-2">
          <h3 class="underscore inline">About Me</h3>
          <p>
            <%= f.text_area :about_me, rows: 5, class: "full-width" %>
          </p>
        </div>

        <div class="col-sm-12">
          <%= f.submit "Update Profile",
            class: "btn btn-primary btn-lg btn-block",
            id: "btn-profile" %>
        </div>

      <% end %>
    </div>

  </div>
</section>


